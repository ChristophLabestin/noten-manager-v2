rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User-Dokumente
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Subjects Subcollection
      match /subjects/{subjectId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // Grades Subcollection
        match /grades/{gradeId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;

          // Optional: Validierung der Felder beim Schreiben
          allow create, update: if request.resource.data.keys().hasAll(['grade', 'weight', 'date']) &&
                                request.resource.data.grade is number &&
                                request.resource.data.weight is number &&
                                request.resource.data.date is timestamp;
        }
      }
    }
  }
}